public class Main {
    public static void main(String[] args) {
        int arr[] = {16, 18, 27, 16, 23, 21, 19};  // Array initialization
        int len = arr.length;
        int count = 0;
        
        for (int i = 0; i < len - 1; i++) {
            if (arr[i] == arr[i + 1]) {
                count++;
            }
        }
        
        System.out.println(count);
    }
}
