public class VarargsExample {
    public static void main(String[] args) {
        System.out.println(sum(1, 2, 3));         // Output: 6
        System.out.println(sum(4, 5, 6, 7, 8));  // Output: 30
    }

    public static int sum(int... numbers) {
        int total = 0;
        for (int number : numbers) {
            total += number;
        }
        return total;
    }
}
